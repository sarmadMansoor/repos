@model PharmacyItem
<h1>Add New Item</h1>
<form asp-action="Create" method="post">
    <label>Name:</label>
    <input asp-for="Name" /><br />
    <label>Description:</label>
    <textarea asp-for="Description"></textarea><br />
    <label>Category:</label>
    <input asp-for="Category" /><br />
    <label>Price:</label>
    <input asp-for="Price" type="number" step="0.01" /><br />
    <label>Quantity:</label>
    <input asp-for="Quantity" type="number" /><br />
    <label>Image URL:</label>
    <input asp-for="Image" /><br />
    <button type="submit">Add</button>
</form>
