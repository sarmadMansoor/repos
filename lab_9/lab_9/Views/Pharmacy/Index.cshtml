@model List<PharmacyItem>
<h1>Pharmacy Items</h1>
<a href="@Url.Action("Create")">Add New Item</a>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>
                    <a href="@Url.Action("Details", new { id = item.Id })">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
