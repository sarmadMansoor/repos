@model lab_06_web.Models.Reservation

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Reservation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h1 class="text-center mb-4">Make a Reservation</h1>

        <form asp-action="index" asp-controller="Reservation" method="post">
            <div class="mb-3">
                <label for="dateTime" class="form-label">Reservation Date and Time</label>
                <input type="datetime-local" id="dateTime" name="DateTime" class="form-control" required />
                <small class="text-muted">Please select a valid date and time.</small>
            </div>

            <div class="mb-3">
                <label for="guestCount" class="form-label">Number of Guests</label>
                <input type="number" id="guestCount" name="GuestCount" class="form-control" min="1" required />
                <small class="text-muted">Enter the number of guests (minimum 1).</small>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js">
</body>
</html>
