@model List<lab_06_web.Models.Respositories.CartItemViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h1 class="text-center mb-4">My Cart</h1>

        @if (Model != null && Model.Count > 0)
        {
            <!-- Cards Container -->
            <div class="row g-4">
                @foreach (var cartItem in Model)
                {
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">@cartItem.ItemName</h5> <!-- Displaying Item Name -->
                                <p class="card-text"><strong>Quantity:</strong> @cartItem.Quantity</p>
                                <p class="card-text"><strong>Price per Item:</strong> $@cartItem.Price.ToString("0.00")</p>
                                <p class="card-text"><strong>Description:</strong> @cartItem.Description</p>
                                <p class="card-text"><strong>Total:</strong> $@(cartItem.Quantity * cartItem.Price)</p>
                            </div>
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <a href="~/Cart/DeleteCart?id=@cartItem.CartId" class="btn btn-danger">
                                    Remove
                                </a>
                                <a href="~/Cart/UpdateQuantity?id=@cartItem.CartId" class="btn btn-primary">
                                    Update Quantity
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Checkout Button -->
            <div class="text-center mt-5">
                <a href="~/Cart/Payment" class="btn btn-success btn-lg">Proceed to Checkout</a>
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center">
                Your cart is empty. <a href="~/Menu/MenuForDelivery">Browse Menu</a> to add items.
            </div>
        }
    </div>

</body>
</html>
